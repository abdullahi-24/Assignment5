@model MvcMusicShop.Models.MusicViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Musics" asp-action="Index" method="get">
    <p>
        Genre:
        <select asp-for="MusicGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        
        Artist:
        <select asp-for="MusicArtist" asp-items="Model.Artists">
            <option value="">All</option>
        </select>
        

        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Musics!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
